<center>
    <div class="file-container">
        <div class="searchbar mt-3">
            <input type="text" placeholder="Search..." id="searchInput" onkeyup="filterTable()"
                style="border-radius: 15px;border: none; width: 25vw;height: 5vh;font-size: 1rem;padding: 15px;">
        </div>
        <div>
            <% if(table && table.length> 0) { %>
                <table class="mt-3" id="myTable" style="font-size: 1.4rem;">
                    <thead>
                        <tr>
                            <% Object.values(table[0]).forEach(function (key) { %>
                                <th style="border: 2px solid black; padding: 15px;text-align: center;">
                                    <%= key %>
                                </th>
                                <% }) %>
                        </tr>
                    </thead>
                    <tbody>
                        <% table.slice(1).forEach(function (row) { %>
                            <tr>
                                <% Object.values(row).forEach(function (value) { %>
                                    <td style="border: 2px solid black; padding: 15px; text-align: center;">
                                        <%= value %>
                                    </td>
                                    <% }) %>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
        </div>
        <div class="link-body mt-5" style="font-size: 1.5rem;">
            <a href="/" class="card-link"><i class="fa-solid fa-house me-2"></i>Back Home</a>
        </div>
    </div>
</center>

<script src="/js/data.js"></script>